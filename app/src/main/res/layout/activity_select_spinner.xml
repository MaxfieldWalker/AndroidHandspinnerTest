<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inoueken.handspinner.SelectSpinnerActivity">

    <ImageButton
        android:id="@+id/LeftButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/SpinnerImage"
        android:layout_marginTop="90dp"
        android:layout_toStartOf="@+id/SpinnerImage"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/left_arrow2" />

    <ImageButton
        android:id="@+id/RightButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/LeftButton"
        android:layout_toEndOf="@+id/SpinnerImage"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/right_arrow2" />

    <ImageView
        android:id="@+id/SpinnerImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/basic_spinner" />

    <Button
        android:id="@+id/PurchaseButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:textSize="30dp" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="もどる" />



    <TextView
        android:id="@+id/SpinnerName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SpinnerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SpinnerName"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SpinnerPirice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:text=">>くわしく"
            android:textColor="#33B5E5"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Coin"
        android:gravity="center_horizontal"
        android:baselineAligned="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/CoinIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="coin_icon"
            android:src="@drawable/ic_monetization_on"
            android:tint="#FFC107" />

        <TextView
            android:id="@+id/CoinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="24dp" />
    </LinearLayout>


</RelativeLayout>
